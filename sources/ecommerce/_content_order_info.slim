.row
  .col-md-8
    .order-box
      .order-details-box
        .order-main-info
          span Order #
          strong KHD8374
        .order-sub-info
          span Placed On
          strong January 14th, 2019
      .order-controls
        form.form-inline
          .form-group
            label for="" Order Status
            select.form-control.form-control-sm
              option Shipped
              option Pending
          .form-group
            label for="" Payment Status
            select.form-control.form-control-sm
              option Paid
              option Pending
          .form-group
            button.btn.btn-primary Save Changes
      .order-items-table
        .table-responsive
          table.table.table-lightborder
            thead
              tr
                th colspan="2" Product Info
                th width="135px" Quantity
                th colspan="2" Price
            tbody
              tr
                td
                  .product-image style="background-image: url(img/product7.jpg)"
                td
                  .product-name Palissade Cone Chair
                  .product-details
                    span Color: 
                    strong  Gold Coral
                    .color-box style="background-color: #D4C1A2"
                td
                  .quantity-selector
                    .quantity-input
                      .input-group
                        .input-group-prepend.input-group-sm
                          .input-group-text
                            .os-icon.os-icon-minus2
                        input.form-control.form-control-sm type="text" value="2"/
                        .input-group-append.input-group-sm
                          .input-group-text
                            .os-icon.os-icon-plus
                td.text-md-right
                  .product-price $329
                td
                  a.product-remove-btn href="#"
                    .os-icon.os-icon-x
              tr
                td
                  .product-image style="background-image: url(img/product8.jpg)"
                td
                  .product-name Serassi Living Room Sofa
                  .product-details
                    span Designed by Nord Architects
                td
                  .quantity-selector
                    .quantity-input
                      .input-group
                        .input-group-prepend.input-group-sm
