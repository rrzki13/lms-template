                        input.form-control.form-control-sm type="text" value="1"/
                        .input-group-append.input-group-sm
                          .input-group-text
                            .os-icon.os-icon-plus
                td.text-md-right
                  .product-price $1,499
                td
                  a.product-remove-btn href="#"
                    .os-icon.os-icon-x
      .order-foot
        .row
          .col-md-6.mb-4
            h5 Notes
            .form-group
              textarea.form-control placeholder="Enter your notes here..."
            button.btn.btn-primary Save Notes
          .col-md-5.offset-md-1
            h5.order-section-heading Order Summary
            .order-summary-row
              .order-summary-label 
                span Subtotal
              .order-summary-value $1,568
            .order-summary-row
              .order-summary-label 
                span Shipping
                strong Next Day Air
